<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="djembe.in.my.pocket.controller.PwForget"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="PwForget" enableScrolling="false" showHeader="false">
		<VBox width="auto" alignItems="Center" justifyContent="Center" fitContainer="true">
			<VBox id="PwForget-Form" class="rounded sapUiTinyMargin shadow-sm" width="22rem">
				<VBox class="sapUiMediumMargin">
					<VBox class="text-center">
						<Title text="Mot de passe ?" titleStyle="H1"/>
					</VBox>
					<VBox class="text-center sapUiContentPadding sapUiTinyMarginTop sapUiSmallMarginBottom">
						<Text text="Veuillez saisir votre adresse e-mail ?" textAlign="Center" />
					</VBox>
					<VBox class="sapUiTinyMarginBottom">
						<Input type="Email" placeholder="Adresse email"/>
					</VBox>
					<VBox class="text-center sapUiLargeMarginBottom">
						<Button text="Réinitialiser le mot de passe" type="Accept" width="100%" icon="sap-icon://email"/>
					</VBox>
					<VBox class="text-center">
						<Label text="Vous avez déjà un compte ?" design="Bold" class="sapUiTinyMarginBottom"/>
						<Link id="linkSignIn" text="Connectez-vous" press="onLinkSignInPress"/>
					</VBox>
				</VBox>
			</VBox>
		</VBox>
	</Page>
</mvc:View>