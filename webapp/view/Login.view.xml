						<Label text="Adresse e-mail"/>
						<Input type="Email"/>
					</VBox>
					<VBox class="sapUiMediumMarginBottom">
						<Label text="Mot de passe"/>
						<Input type="Password"/>
					</VBox>
					<VBox class="text-center sapUiSmallMarginBottom">
						<Button text="Me connecter" type="Accept" icon="sap-icon://visits"/>
					</VBox>
					<VBox class="text-center">
						<Link text="Mot de passe oublié ?"/>
					</VBox>
				</VBox>
			</VBox>
		</VBox>
