<mvc:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m" controllerName="djembe.in.my.pocket.controller.SignIn"
	xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Sign In" enableScrolling="false" showHeader="false">
		<VBox width="auto" alignItems="Center" justifyContent="Center" fitContainer="true">
			<VBox id="SignIn-Form" class="rounded sapUiTinyMargin shadow-sm" width="22rem">
				<VBox class="sapUiMediumMargin">
					<VBox class="text-center">
						<Title text="Se connecter" titleStyle="H1" />
					</VBox>
					<VBox class="text-center sapUiContentPadding sapUiSmallMarginTop sapUiTinyMarginBottom">
						<Label text="Vous n’avez pas encore de compte ?" design="Bold" class="sapUiSmallMarginBottom"/>
						<Link id="linkSignUp" text="Créez votre compte" press="onLinkSignUpPress" />
					</VBox>
					<VBox class="sapUiTinyMarginBottom">
						<Input type="Email" placeholder="Adresse email" />
					</VBox>
					<VBox class="sapUiTinyMarginBottom">
						<Input type="Password" placeholder="Mot de passe" />
					</VBox>
					<VBox class="text-center sapUiSmallMarginBottom">
						<Button text="Me connecter" type="Accept" icon="sap-icon://visits" width="100%" />
					</VBox>
					<VBox class="text-center sapUiSmallMarginBottom">
						<Link id="linkPwForget" text="Mot de passe oublié ?" press="onLinkPwForgetPress" />
					</VBox>
					<VBox class="text-center sapUiSmallMarginBottom">
						<Label text="ou"/>
					</VBox>
					<VBox>
						<Button text="Se connecter avec Google" type="Default" width="100%" icon="assets/img/google-sign-in.svg"
							class="btn-google-sign-in sapUiTinyMarginBottom"/>
						<Button text="Se connecter avec Facebook" type="Default" width="100%" icon="assets/img/facebook-sign-in.svg" class="btn-facebook-sign-in"/>
					</VBox>
				</VBox>
			</VBox>
		</VBox>
	</Page>
</mvc:View>