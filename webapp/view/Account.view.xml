<mvc:View 
	xmlns="sap.m" 
	xmlns:core="sap.ui.core" 
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:html="http://www.w3.org/1999/xhtml"
	controllerName="djembe.in.my.pocket.controller.Account">
	
	<Page 
		title="Account Page" 
		enableScrolling="false" 
		showHeader="true">
		
		<customHeader>
			<Bar>
				
				<contentMiddle>
					<Title text="{i18n>accountViewPageTitle}" />
				</contentMiddle>
				
				<contentRight>
					<Button text="{i18n>accountViewOkButtonText}" press="onOkButtonPress" />
				</contentRight>
				
			</Bar>
		</customHeader>
		
		<VBox 
			class="text-center" 
			backgroundDesign="Solid">
			
			<VBox class="sapUiMediumMargin">
				<Avatar
					displaySize="XL"
					showBorder="true"
					src="{viewModel>/photoURL}" /> 
		
				<Title 
					titleStyle="H2"
					class="sapUiSmallMarginTop"
					text="{viewModel>/displayName}" />
		
				<Title 
					titleStyle="H6"
					class="sapUiTinyMarginTop"
					text="{viewModel>/email}" />
			</VBox>
			
		</VBox>
		
		<List
			id="Account-List-Parameter"
			class="sapUiLargeMarginTop">
			
			<headerToolbar>
				<OverflowToolbar>
					<Label text="{i18n>accountViewListHeaderTitle}" />
				</OverflowToolbar>
			</headerToolbar>

			<DisplayListItem
					label="{i18n>accountViewListFirebaseUserIDLabel}"
					value="{viewModel>/uid}" />
					
			<DisplayListItem
				label="{i18n>accountViewListFirebaseEmailVerifiedLabel}"
				value="{viewModel>/emailVerified}" />
					
			<InputListItem 
				label="{i18n>accountViewListDarkModeLabel}">
				<Switch 
					state="true" 
					change="onApplyThemeChange" />
			</InputListItem>
			
			<DisplayListItem
				label="{i18n>accountViewListAppVersionLabel}"
				value="1.0" />
				
			<DisplayListItem
				label="Modifier mot de passe"
				value="" />
				
			<DisplayListItem
				label="Nous contacter"
				value="" />
				
		</List>
		
		<List>
			
			<headerToolbar>
				<OverflowToolbar>
					<Label text="" />
				</OverflowToolbar>
			</headerToolbar>
			
			<StandardListItem
				type="Active"
				class="text-center"
				id="Account-Logout-Button" 
				press="onLogoutButtonPress" 
				title="{i18n>accountViewFormLogOutButtonText}" />
				
		</List>	
		
		<List>
			
			<headerToolbar>
				<OverflowToolbar>
					<Label text="" />
				</OverflowToolbar>
			</headerToolbar>
			
			<StandardListItem
				type="Active"
				class="text-center"
				id="Account-Delete-Account" 
				press="onDeleteAccountButtonPress" 
				title="Supprimer mon compte" />
				
		</List>
		
		<!--// var displayName = oUser.displayName;-->
		<!--// var email = oUser.email;-->
		<!--// var emailVerified = oUser.emailVerified;-->
		<!--// var photoURL = oUser.photoURL;-->
		<!--// var isAnonymous = oUser.isAnonymous;-->
		<!--// var uid = oUser.uid;-->
		<!--// var providerData = oUser.providerData;-->
		
		<!--// var providerData = oUser.providerData;-->
		
	</Page>
		
</mvc:View>